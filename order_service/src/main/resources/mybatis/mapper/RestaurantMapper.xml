<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ru.liga.order_service.batis_mapper.RestaurantMapper">

    <resultMap id="RestaurantResultMap" type="Restaurant">

            <result property="id" column="restaurant_id" />
            <result property="name" column="restaurant_name" />
            <result property="address" column="restaurant_address" />
            <result property="status" column="restaurant_status" />

    </resultMap>

    <select id="findRestaurantById" resultMap="RestaurantResultMap">
        SELECT
            restaurant_id,
            restaurant_name AS restaurant_name,
            address AS restaurant_address,
            status AS restaurant_status
        FROM
            restaurant
        WHERE
            restaurant_id = #{id}
    </select>


    <select id="findAllRestaurantByStatus" resultMap="RestaurantResultMap">
        SELECT
            restaurant_id,
            restaurant_name AS restaurant_name,
            address AS restaurant_address,
            status AS restaurant_status
        FROM
            restaurant
        WHERE
            status::text = #{status}
    </select>

</mapper>
