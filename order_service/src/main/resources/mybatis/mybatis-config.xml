<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="application.properties"> <!--ссылка на файл со свойствами(ссылка на СУБД, логин, пароль и тп.)-->
    </properties>
    <typeHandlers>
        <typeHandler handler="ru.liga.order_service.handler.ZonedDateTimeTypeHandler"/>
    </typeHandlers>
    <environments default="local"><!--в данном блоке настраиваются подключения к БД-->
        <environment id="local">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="org.postgresql.Driver"/>
                <property name="url" value="jdbc:postgresql://localhost:5432/food_service"/>
                <property name="username" value="postgres"/>
                <property name="password" value="1234"/>
            </dataSource>
        </environment>
    </environments>

    <mappers><!--в данном блоке необходимо описать маперы, которые используются в проекте-->
        <mapper class="ru.liga.order_service.batis_mapper.OrderMapper"/>
        <mapper class="ru.liga.order_service.batis_mapper.CourierMapper"/>
        <mapper class="ru.liga.order_service.batis_mapper.CustomerMapper"/>
        <mapper class="ru.liga.order_service.batis_mapper.RestaurantMapper"/>
    </mappers>

</configuration>